<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questionType.StreakActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_heart_refill" />

        <TextView
            android:id="@+id/tvStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="70dp"
            android:textStyle="bold"
            android:textColor="#F19B37"
            android:fontFamily="@font/feather_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ngày lửa!"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#F19B37"
            android:fontFamily="@font/feather_bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_logo"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meow"
                android:textSize="24dp"
                android:layout_alignStart="@+id/image"
                android:layout_alignEnd="@+id/image"
                android:gravity="center"
                android:textColor="@color/pink1"
                android:layout_below="@+id/image"
                android:fontFamily="@font/feather_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:text="Luyện tập mỗi ngày để không mất lửa của bạn nhé!"
                android:textSize="18dp"
                android:layout_toEndOf="@+id/image"
                android:background="@drawable/edit_text_background"
                android:fontFamily="@font/font_bold"
                android:textColor="@color/dark_gray" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_4_goc"
        android:layout_alignParentBottom="true"
        android:text="Tiếp tục"
        android:fontFamily="@font/font_bold"
        android:textSize="18dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"/>
</RelativeLayout>