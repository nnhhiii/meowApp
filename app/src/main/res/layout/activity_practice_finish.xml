<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".questionType.StartActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/image"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_logo"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:text="Tuyệt lắm!"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="@color/pink1"
            android:fontFamily="@font/feather_bold"/>
        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:text="Bạn đã hoàn thành xong ôn tập!"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/dark_gray" />

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="120dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="135dp"
            android:layout_below="@+id/text3"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/green2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/feather_bold"
                    android:text="Bạn đã đúng"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:textSize="15dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/view5"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="16dp"
                            android:layout_toStartOf="@+id/tvcount"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_goal"/>

                        <TextView
                            android:id="@+id/tvcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="28dp"
                            android:fontFamily="@font/feather_bold"
                            android:text="2 câu"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/green2"
                            android:textSize="18dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <Button
        android:id="@+id/btnnext"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:text="Tiếp tục luyện tập"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@drawable/radius_4_goc"
        android:layout_margin="25dp"/>

</RelativeLayout>